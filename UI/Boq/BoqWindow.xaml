<Window
    x:Class="Pulse.UI.Boq.BoqWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:Pulse.UI"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Pulse — Fire Alarm BOQ"
    Width="1100"
    Height="620"
    MinWidth="700"
    MinHeight="400"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStyle="None"
    WindowStartupLocation="CenterOwner"
    MouseMove="Window_MouseMove"
    MouseUp="Window_MouseUp"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Dark.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Pulse;component/UI/Themes/ElementStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVis" />

            <!-- ── DataGrid Column Header ──────────────────────────────── -->
            <Style x:Key="BoqColumnHeaderStyle" TargetType="DataGridColumnHeader">
                <Setter Property="Background"  Value="{DynamicResource SecondaryBackgroundBrush}" />
                <Setter Property="Foreground"  Value="{DynamicResource ForegroundBrush}" />
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                <Setter Property="Padding"     Value="8,5" />
                <Setter Property="FontWeight"  Value="SemiBold" />
            </Style>

            <!-- ── DataGrid Cell ──────────────────────────────────────── -->
            <Style x:Key="BoqCellStyle" TargetType="DataGridCell">
                <Setter Property="Background"  Value="Transparent" />
                <Setter Property="Foreground"  Value="{DynamicResource ForegroundBrush}" />
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                <Setter Property="Padding"     Value="6,3" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource HighlightBrush}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ── DataGrid ───────────────────────────────────────────── -->
            <Style x:Key="BoqDataGridStyle" TargetType="DataGrid">
                <Setter Property="Background"               Value="{DynamicResource PrimaryBackgroundBrush}" />
                <Setter Property="Foreground"               Value="{DynamicResource ForegroundBrush}" />
                <Setter Property="BorderBrush"              Value="{DynamicResource BorderBrush}" />
                <Setter Property="BorderThickness"          Value="0" />
                <Setter Property="RowBackground"            Value="{DynamicResource PrimaryBackgroundBrush}" />
                <Setter Property="AlternatingRowBackground" Value="{DynamicResource SecondaryBackgroundBrush}" />
                <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource BorderBrush}" />
                <Setter Property="VerticalGridLinesBrush"   Value="{DynamicResource BorderBrush}" />
                <Setter Property="ColumnHeaderStyle"        Value="{StaticResource BoqColumnHeaderStyle}" />
                <Setter Property="CellStyle"                Value="{StaticResource BoqCellStyle}" />
            </Style>

            <!-- ── DataGrid Row ───────────────────────────────────────── -->
            <Style x:Key="BoqDataGridRowStyle" TargetType="DataGridRow">
                <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource SelectionHoverBrush}" />
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="{DynamicResource HighlightBrush}" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- ── Group header ───────────────────────────────────────── -->
            <Style x:Key="GroupHeaderStyle" TargetType="GroupItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="GroupItem">
                            <Expander IsExpanded="True">
                                <Expander.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Foreground="{DynamicResource TextHighlightBrush}"
                                                   FontWeight="SemiBold" FontSize="12"
                                                   Text="{Binding Name}" Margin="0,0,6,0" />
                                        <TextBlock Foreground="{DynamicResource IconForegroundBrush}"
                                                   FontSize="11"
                                                   Text="{Binding ItemCount, StringFormat='({0})'}" />
                                    </StackPanel>
                                </Expander.Header>
                                <Expander.Content>
                                    <ItemsPresenter />
                                </Expander.Content>
                            </Expander>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="Transparent" ClipToBounds="True">

        <!-- ── Frosted-glass edge glow (same as main window) ───────────── -->
        <Border BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="2"
                ClipToBounds="True"
                CornerRadius="10"
                Opacity="0.7"
                SnapsToDevicePixels="True">
            <Border.Effect>
                <BlurEffect KernelType="Gaussian" Radius="2" />
            </Border.Effect>
        </Border>

        <!-- ── Main surface ─────────────────────────────────────────────── -->
        <Border Margin="2"
                Background="{DynamicResource PrimaryBackgroundBrush}"
                CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />  <!-- Title bar  -->
                    <RowDefinition Height="Auto"/> <!-- Toolbar    -->
                    <RowDefinition Height="*"   /> <!-- Content    -->
                    <RowDefinition Height="24"  /> <!-- Status bar -->
                </Grid.RowDefinitions>

                <!-- Row 0 — Title bar -->
                <ui:TitleBar Grid.Row="0" Foreground="{DynamicResource IconBrush}" />

                <!-- Row 1 — Toolbar -->
                <Border Grid.Row="1"
                        Background="{DynamicResource SecondaryBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="8,4">
                    <DockPanel>
                        <!-- Module label -->
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="TableLarge" Width="18" Height="18"
                                                     Foreground="#FF6B9EDC" VerticalAlignment="Center"
                                                     Margin="0,0,6,0" />
                            <TextBlock Text="Fire Alarm — Bill of Quantities"
                                       FontSize="13" FontWeight="SemiBold"
                                       Foreground="{DynamicResource ForegroundBrush}"
                                       VerticalAlignment="Center" />
                        </StackPanel>

                        <!-- Right-side buttons -->
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right"
                                    HorizontalAlignment="Right" VerticalAlignment="Center">

                            <!-- Row count badge -->
                            <TextBlock Text="{Binding RowCount, StringFormat='{}{0} rows'}"
                                       Foreground="{DynamicResource IconForegroundBrush}"
                                       FontSize="11" VerticalAlignment="Center"
                                       Margin="0,0,10,0" />

                            <!-- Loading -->
                            <TextBlock Text="Loading…"
                                       Foreground="{DynamicResource TextHighlightBrush}"
                                       FontSize="11" VerticalAlignment="Center"
                                       Margin="0,0,10,0"
                                       Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}" />

                            <Button Style="{StaticResource PulseActionButtonStyle}"
                                    Command="{Binding ExportSettingsCommand}"
                                    ToolTip="Export BOQ settings to JSON file"
                                    Margin="0,0,4,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Export" Width="14" Height="14"
                                                             VerticalAlignment="Center" Margin="0,0,4,0" />
                                    <TextBlock Text="Export" FontSize="11" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource PulseActionButtonStyle}"
                                    Command="{Binding ImportSettingsCommand}"
                                    ToolTip="Import BOQ settings from JSON file"
                                    Margin="0,0,4,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Import" Width="14" Height="14"
                                                             VerticalAlignment="Center" Margin="0,0,4,0" />
                                    <TextBlock Text="Import" FontSize="11" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource PulseActionButtonStyle}"
                                    Command="{Binding ToggleSettingsPanelCommand}"
                                    ToolTip="Toggle column / grouping settings"
                                    Margin="0,0,4,0">
                                <materialDesign:PackIcon Kind="Cog" Width="14" Height="14"
                                                         VerticalAlignment="Center" />
                            </Button>

                            <Button Style="{StaticResource PulsePrimaryButtonStyle}"
                                    Command="{Binding RefreshCommand}"
                                    ToolTip="Re-collect data from Revit">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="DatabaseRefresh" Width="14" Height="14"
                                                             VerticalAlignment="Center" Margin="0,0,4,0" />
                                    <TextBlock Text="Refresh" FontSize="11" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <!-- Row 2 — Content -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- DataGrid -->
                    <DataGrid x:Name="TheDataGrid"
                              Grid.Column="0"
                              ItemsSource="{Binding Rows}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="True"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="True"
                              SelectionMode="Extended"
                              SelectionUnit="FullRow"
                              EnableRowVirtualization="True"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling"
                              Style="{StaticResource BoqDataGridStyle}"
                              RowStyle="{StaticResource BoqDataGridRowStyle}"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              ScrollViewer.CanContentScroll="True">
                        <!-- Columns built dynamically in code-behind -->
                    </DataGrid>

                    <!-- Settings Panel -->
                    <Border Grid.Column="1"
                            Width="320"
                            Background="{DynamicResource SecondaryBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1,0,0,0"
                            Visibility="{Binding IsSettingsPanelOpen, Converter={StaticResource BoolToVis}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <StackPanel Margin="12">

                                <!-- ── Column Chooser ──────────────────────── -->
                                <TextBlock Text="COLUMNS"
                                           Style="{StaticResource FieldLabelStyle}"
                                           Margin="0,0,0,8" />

                                <TextBox Text="{Binding ColumnSearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Background="{DynamicResource PrimaryBackgroundBrush}"
                                         Foreground="{DynamicResource ForegroundBrush}"
                                         BorderBrush="{DynamicResource BorderBrush}"
                                         BorderThickness="1"
                                         Padding="6,4"
                                         materialDesign:HintAssist.Hint="Search columns…"
                                         Margin="0,0,0,6" />

                                <Border BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        Height="180"
                                        Margin="0,0,0,4">
                                    <ListBox ItemsSource="{Binding FilteredColumns}"
                                             SelectedItem="{Binding SelectedColumn}"
                                             Background="{DynamicResource PrimaryBackgroundBrush}"
                                             Foreground="{DynamicResource ForegroundBrush}"
                                             BorderThickness="0"
                                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding IsVisible}"
                                                          Content="{Binding Header}"
                                                          Foreground="{DynamicResource ForegroundBrush}"
                                                          Padding="4,2" />
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Border>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Button ToolTip="Move Up"
                                            Command="{Binding MoveColumnUpCommand}"
                                            Style="{StaticResource PulseActionButtonStyle}"
                                            Width="32" Padding="0" Margin="0,0,4,0">
                                        <materialDesign:PackIcon Kind="ArrowUp" Width="14" Height="14" />
                                    </Button>
                                    <Button ToolTip="Move Down"
                                            Command="{Binding MoveColumnDownCommand}"
                                            Style="{StaticResource PulseActionButtonStyle}"
                                            Width="32" Padding="0" Margin="0,0,8,0">
                                        <materialDesign:PackIcon Kind="ArrowDown" Width="14" Height="14" />
                                    </Button>
                                    <Button Command="{Binding SaveSettingsCommand}"
                                            Style="{StaticResource PulsePrimaryButtonStyle}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="ContentSave" Width="14" Height="14"
                                                                     VerticalAlignment="Center" Margin="0,0,4,0" />
                                            <TextBlock Text="Save Settings" FontSize="11" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>

                                <Separator Background="{DynamicResource BorderBrush}" Margin="0,0,0,10" />

                                <!-- ── Custom Columns ──────────────────────── -->
                                <TextBlock Text="CUSTOM COLUMNS"
                                           Style="{StaticResource FieldLabelStyle}"
                                           Margin="0,0,0,8" />

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <Button Command="{Binding AddCustomColumnCommand}"
                                            Style="{StaticResource PulseActionButtonStyle}"
                                            Margin="0,0,4,0">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Plus" Width="12" Height="12"
                                                                     VerticalAlignment="Center" Margin="0,0,3,0" />
                                            <TextBlock Text="Add" FontSize="11" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                    <Button Command="{Binding EditCustomColumnCommand}"
                                            Style="{StaticResource PulseActionButtonStyle}"
                                            Margin="0,0,4,0">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Pencil" Width="12" Height="12"
                                                                     VerticalAlignment="Center" Margin="0,0,3,0" />
                                            <TextBlock Text="Edit" FontSize="11" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                    <Button Command="{Binding DeleteCustomColumnCommand}"
                                            Style="{StaticResource NegativeActionButtonStyle}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Delete" Width="12" Height="12"
                                                                     VerticalAlignment="Center" Margin="0,0,3,0" />
                                            <TextBlock Text="Delete" FontSize="11" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>

                                <Separator Background="{DynamicResource BorderBrush}" Margin="0,0,0,10" />

                                <!-- ── Grouping Rules ──────────────────────── -->
                                <TextBlock Text="GROUPING"
                                           Style="{StaticResource FieldLabelStyle}"
                                           Margin="0,0,0,8" />

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <Button Command="{Binding AddGroupingRuleCommand}"
                                            Style="{StaticResource PulseActionButtonStyle}"
                                            Margin="0,0,4,0">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Plus" Width="12" Height="12"
                                                                     VerticalAlignment="Center" Margin="0,0,3,0" />
                                            <TextBlock Text="Add" FontSize="11" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                    <Button Command="{Binding RemoveGroupingRuleCommand}"
                                            Style="{StaticResource NegativeActionButtonStyle}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Minus" Width="12" Height="12"
                                                                     VerticalAlignment="Center" Margin="0,0,3,0" />
                                            <TextBlock Text="Remove" FontSize="11" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>

                                <Border BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        Height="100"
                                        Margin="0,0,0,6">
                                    <ListBox ItemsSource="{Binding GroupingRules}"
                                             SelectedItem="{Binding SelectedGroupingRule}"
                                             Background="{DynamicResource PrimaryBackgroundBrush}"
                                             Foreground="{DynamicResource ForegroundBrush}"
                                             BorderThickness="0">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Priority, StringFormat='{}{0}. '}"
                                                               Foreground="{DynamicResource IconForegroundBrush}"
                                                               FontSize="11" Width="20" />
                                                    <ComboBox ItemsSource="{Binding DataContext.AvailableFieldKeys,
                                                                           RelativeSource={RelativeSource AncestorType=Window}}"
                                                              SelectedItem="{Binding FieldKey}"
                                                              Style="{StaticResource DarkComboBoxStyle}"
                                                              MinWidth="180"
                                                              FontSize="11" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Border>

                                <Separator Background="{DynamicResource BorderBrush}" Margin="0,0,0,10" />

                                <!-- ── Sorting Rules ───────────────────────── -->
                                <TextBlock Text="SORTING"
                                           Style="{StaticResource FieldLabelStyle}"
                                           Margin="0,0,0,8" />

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <Button Command="{Binding AddSortingRuleCommand}"
                                            Style="{StaticResource PulseActionButtonStyle}"
                                            Margin="0,0,4,0">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Plus" Width="12" Height="12"
                                                                     VerticalAlignment="Center" Margin="0,0,3,0" />
                                            <TextBlock Text="Add" FontSize="11" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                    <Button Command="{Binding RemoveSortingRuleCommand}"
                                            Style="{StaticResource NegativeActionButtonStyle}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Minus" Width="12" Height="12"
                                                                     VerticalAlignment="Center" Margin="0,0,3,0" />
                                            <TextBlock Text="Remove" FontSize="11" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>

                                <Border BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        Height="100"
                                        Margin="0,0,0,6">
                                    <ListBox ItemsSource="{Binding SortingRules}"
                                             SelectedItem="{Binding SelectedSortingRule}"
                                             Background="{DynamicResource PrimaryBackgroundBrush}"
                                             Foreground="{DynamicResource ForegroundBrush}"
                                             BorderThickness="0">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Priority, StringFormat='{}{0}. '}"
                                                               Foreground="{DynamicResource IconForegroundBrush}"
                                                               FontSize="11" Width="20" />
                                                    <ComboBox ItemsSource="{Binding DataContext.AvailableFieldKeys,
                                                                           RelativeSource={RelativeSource AncestorType=Window}}"
                                                              SelectedItem="{Binding FieldKey}"
                                                              Style="{StaticResource DarkComboBoxStyle}"
                                                              MinWidth="130"
                                                              FontSize="11" />
                                                    <CheckBox IsChecked="{Binding IsDescending}"
                                                              Content="Desc"
                                                              Foreground="{DynamicResource IconForegroundBrush}"
                                                              FontSize="11"
                                                              Margin="6,0,0,0"
                                                              VerticalAlignment="Center" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Border>

                            </StackPanel>
                        </ScrollViewer>

                        <!-- Apply button — pinned to bottom of panel -->
                        <Border Grid.Row="1"
                                Background="{DynamicResource SecondaryBackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,1,0,0"
                                Padding="12,8">
                            <Button Command="{Binding ApplyViewRulesCommand}"
                                    Style="{StaticResource PulsePrimaryButtonStyle}"
                                    HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="PlayCircleOutline" Width="14" Height="14"
                                                             VerticalAlignment="Center" Margin="0,0,6,0" />
                                    <TextBlock Text="Apply Grouping &amp; Sort" FontSize="11" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </Border>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Row 3 — Status bar -->
                <Border Grid.Row="3"
                        Background="{DynamicResource SecondaryBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,1,0,0"
                        CornerRadius="0,0,8,8"
                        Padding="10,0">
                    <TextBlock Text="{Binding StatusText}"
                               Foreground="{DynamicResource IconForegroundBrush}"
                               FontSize="11"
                               VerticalAlignment="Center" />
                </Border>

                <!-- Loading overlay -->
                <Border Grid.Row="0" Grid.RowSpan="4"
                        Background="#80000000"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                        CornerRadius="10"
                        IsHitTestVisible="True">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="200" Height="4" Margin="0,0,0,8" />
                        <TextBlock Text="Collecting data…" Foreground="White"
                                   FontSize="12" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ── Resize grips ─────────────────────────────────────────────── -->
        <Border x:Name="ResizeLeft"   Width="5"  HorizontalAlignment="Left"   Background="Transparent" Cursor="SizeWE"   MouseDown="ResizeLeft_MouseDown"/>
        <Border x:Name="ResizeRight"  Width="5"  HorizontalAlignment="Right"  Background="Transparent" Cursor="SizeWE"   MouseDown="ResizeRight_MouseDown"/>
        <Border x:Name="ResizeBottom" Height="5" VerticalAlignment="Bottom"   Background="Transparent" Cursor="SizeNS"   MouseDown="ResizeBottom_MouseDown"/>
        <Border x:Name="ResizeBottomLeft"  Width="10" Height="10" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Background="Transparent" Cursor="SizeNESW" MouseDown="ResizeBottomLeft_MouseDown"/>
        <Border x:Name="ResizeBottomRight" Width="10" Height="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="Transparent" Cursor="SizeNWSE" MouseDown="ResizeBottomRight_MouseDown"/>
    </Grid>
</Window>
