<!--
    IEC two-cell battery symbol.
    Design size: 52 × 60 px (matches panel rightSecW).
    At runtime DiagramPanel positions this control; colors are set via StrokeBrush / DimBrush.
-->
<UserControl
    x:Class="Pulse.UI.Controls.BatterySymbol"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="52"
    Height="60"
    IsHitTestVisible="False">
    <Canvas Width="52" Height="60">

        <!--  Central vertical conductor  -->
        <Line
            Stroke="{Binding DimBrush, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=#66FFFFFF}"
            StrokeThickness="1"
            X1="26"
            X2="26"
            Y1="0"
            Y2="15" />

        <!--  ── Cell 1 (upper) ─────────────────────────────────  -->
        <!--  thin plate (−)  -->
        <Line
            Stroke="{Binding DimBrush, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=#66FFFFFF}"
            StrokeThickness="1"
            X1="10"
            X2="42"
            Y1="17"
            Y2="17" />
        <!--  thick plate (+)  -->
        <Line
            Stroke="{Binding StrokeBrush, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=#CCFFFFFF}"
            StrokeThickness="1.5"
            X1="19.5"
            X2="32.5"
            Y1="20"
            Y2="20" />

        <!--  Dashed inter-cell gap  -->
        <Line
            Stroke="{Binding DimBrush, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=#66FFFFFF}"
            StrokeThickness="1"
            X1="26"
            X2="26"
            Y1="20"
            Y2="25" />

        <Line
            Stroke="{Binding DimBrush, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=#66FFFFFF}"
            StrokeThickness="1"
            X1="26"
            X2="26"
            Y1="28"
            Y2="32" />

        <Line
            Stroke="{Binding DimBrush, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=#66FFFFFF}"
            StrokeThickness="1"
            X1="26"
            X2="26"
            Y1="35"
            Y2="40" />

        <!--  ── Cell 2 (lower) ─────────────────────────────────  -->
        <!--  thin plate (−)  -->
        <Line
            Stroke="{Binding DimBrush, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=#66FFFFFF}"
            StrokeThickness="1"
            X1="10"
            X2="42"
            Y1="40"
            Y2="40" />
        <!--  thick plate (+)  -->
        <Line
            Stroke="{Binding StrokeBrush, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=#CCFFFFFF}"
            StrokeThickness="1.5"
            X1="19.5"
            X2="32.5"
            Y1="43"
            Y2="43" />
        <Line
            Stroke="{Binding DimBrush, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=#66FFFFFF}"
            StrokeThickness="1"
            X1="26"
            X2="26"
            Y1="45"
            Y2="60" />

    </Canvas>
</UserControl>
