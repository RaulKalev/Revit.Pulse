<!-- IEC two-cell battery symbol.
     Design size: 52 × 60 px (matches panel rightSecW).
     At runtime DiagramPanel positions this control; colors are set via StrokeBrush / DimBrush. -->
<UserControl x:Class="Pulse.UI.Controls.BatterySymbol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="52" Height="60"
             IsHitTestVisible="False">
    <Canvas Width="52" Height="60">

        <!-- Central vertical conductor -->
        <Line X1="26" Y1="2"  X2="26" Y2="58"
              Stroke="{Binding DimBrush}"    StrokeThickness="1"/>

        <!-- ── Cell 1 (upper) ───────────────────────────────── -->
        <!-- thin plate (−) -->
        <Line X1="15" Y1="11" X2="37" Y2="11"
              Stroke="{Binding DimBrush}"    StrokeThickness="1"/>
        <!-- thick plate (+) -->
        <Line X1="19.5" Y1="17" X2="32.5" Y2="17"
              Stroke="{Binding StrokeBrush}" StrokeThickness="2.5"/>

        <!-- Dashed inter-cell gap -->
        <Line X1="26" Y1="21" X2="26" Y2="31"
              Stroke="{Binding DimBrush}"    StrokeThickness="1">
            <Line.StrokeDashArray>
                <DoubleCollection>2 2</DoubleCollection>
            </Line.StrokeDashArray>
        </Line>

        <!-- ── Cell 2 (lower) ───────────────────────────────── -->
        <!-- thin plate (−) -->
        <Line X1="15" Y1="35" X2="37" Y2="35"
              Stroke="{Binding DimBrush}"    StrokeThickness="1"/>
        <!-- thick plate (+) -->
        <Line X1="19.5" Y1="41" X2="32.5" Y2="41"
              Stroke="{Binding StrokeBrush}" StrokeThickness="2.5"/>

    </Canvas>
</UserControl>
