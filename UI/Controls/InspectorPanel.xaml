<UserControl
    x:Class="Pulse.UI.Controls.InspectorPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:converters="clr-namespace:Pulse.UI.Converters"
    xmlns:controls="clr-namespace:Pulse.UI.Controls"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Pulse;component/UI/Themes/DarkTheme.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Pulse;component/UI/Themes/ElementStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis"/>
            <converters:CountToVisibilityConverter x:Key="CountToVisibility"/>
            <converters:SeverityToBrushConverter x:Key="SeverityToBrush"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource CardBorderStyle}" Padding="0">
        <Grid>

            <!-- ══ full-height inspector content ══ -->
            <Grid>

                <!-- ── No selection placeholder ── -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                            Visibility="{Binding HasSelection, Converter={StaticResource InverseBoolToVis}}">
                    <materialDesign:PackIcon Kind="InformationOutline" Width="32" Height="32"
                                             HorizontalAlignment="Center"
                                             Foreground="{DynamicResource IconForegroundBrush}" Opacity="0.4"/>
                    <TextBlock Text="Select an item to inspect"
                               FontSize="11" HorizontalAlignment="Center"
                               Foreground="{DynamicResource IconForegroundBrush}"
                               Opacity="0.5" Margin="0,6,0,0"/>
                </StackPanel>

                <!-- ── Selection content ── -->
                <ScrollViewer Style="{StaticResource PulseScrollViewerStyle}"
                              HorizontalScrollBarVisibility="Disabled"
                              Visibility="{Binding HasSelection, Converter={StaticResource BoolToVis}}">
                <StackPanel Margin="6,6,6,6">

                    <!-- ╔══════════════════════════════╗ -->
                    <!-- ║  HEADER CARD (always visible) ║ -->
                    <!-- ╚══════════════════════════════╝ -->
                    <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1" CornerRadius="5"
                            Padding="10,8" Margin="0,0,0,6">
                        <StackPanel>
                            <!-- Entity type pill -->
                            <Border Background="{DynamicResource HighlightBrush}"
                                    CornerRadius="3" Padding="5,2"
                                    HorizontalAlignment="Left" Margin="0,0,0,4">
                                <TextBlock Text="{Binding EntityType}"
                                           FontSize="9" FontWeight="Bold"
                                           Foreground="{DynamicResource IconForegroundBrush}"
                                           TextOptions.TextFormattingMode="Display"/>
                            </Border>
                            <!-- Entity name -->
                            <TextBlock Text="{Binding Title}"
                                       FontSize="15" FontWeight="Bold"
                                       Foreground="{DynamicResource ForegroundBrush}"
                                       TextWrapping="Wrap" Margin="0,0,0,6"/>
                            <!-- Badge row -->
                            <StackPanel Orientation="Horizontal">
                                <Border Style="{DynamicResource WarningBadgeStyle}"
                                        Visibility="{Binding WarningCount, Converter={StaticResource CountToVisibility}}"
                                        Margin="0,0,4,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AlertOutline" Width="11" Height="11"
                                                                 VerticalAlignment="Center" Margin="0,0,3,0" Foreground="Black"/>
                                        <TextBlock FontSize="10" FontWeight="Bold" Foreground="Black">
                                            <Run Text="{Binding WarningCount, Mode=OneWay}"/>
                                            <Run Text="warnings"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                                <Border Style="{DynamicResource InfoBadgeStyle}"
                                        Visibility="{Binding ChildDeviceCount, Converter={StaticResource CountToVisibility}}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AccessPoint" Width="11" Height="11"
                                                                 VerticalAlignment="Center" Margin="0,0,3,0" Foreground="Black"/>
                                        <TextBlock FontSize="10" FontWeight="Bold" Foreground="Black">
                                            <Run Text="{Binding ChildDeviceCount, Mode=OneWay}"/>
                                            <Run Text="devices"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- ╔══════════════════════════╗ -->
                    <!-- ║  PROPERTIES CARD          ║ -->
                    <!-- ╚══════════════════════════╝ -->
                    <Expander Style="{StaticResource PulseExpanderStyle}"
                              IsExpanded="True"
                              Visibility="{Binding Properties.Count, Converter={StaticResource CountToVisibility}}">
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="TagOutline" Width="13" Height="13"
                                                         VerticalAlignment="Center" Margin="0,0,5,0"
                                                         Foreground="{DynamicResource IconForegroundBrush}"/>
                                <TextBlock Text="PROPERTIES" FontSize="10" FontWeight="SemiBold"
                                           Foreground="{DynamicResource IconForegroundBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Expander.Header>
                        <ItemsControl ItemsSource="{Binding Properties}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" MinWidth="80" MaxWidth="110"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Key}" FontSize="11"
                                                   Foreground="{DynamicResource IconForegroundBrush}"
                                                   VerticalAlignment="Top"
                                                   Margin="0,0,8,0" TextWrapping="NoWrap"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Value}" FontSize="11"
                                                   Foreground="{DynamicResource ForegroundBrush}"
                                                   TextWrapping="Wrap"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>

                    <!-- ╔══════════════════════════╗ -->                    <!-- ║  CURRENT DRAW CARD         ║ -->
                    <!-- ╚═════════════════════════╝ -->
                    <Expander Style="{StaticResource PulseExpanderStyle}"
                              IsExpanded="True"
                              Visibility="{Binding ShowCurrentDraw, Converter={StaticResource BoolToVis}}">
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FlashOutline" Width="13" Height="13"
                                                         VerticalAlignment="Center" Margin="0,0,5,0"
                                                         Foreground="{DynamicResource IconForegroundBrush}"/>
                                <TextBlock Text="CURRENT DRAW" FontSize="10" FontWeight="SemiBold"
                                           Foreground="{DynamicResource IconForegroundBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Expander.Header>
                        <StackPanel>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" MinWidth="80" MaxWidth="110"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Normal" FontSize="11"
                                           Foreground="{DynamicResource IconForegroundBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <!-- Display: double-click to edit -->
                                <TextBlock Grid.Column="1"
                                           x:Name="CurrentDrawNormalDisplay"
                                           Text="{Binding CurrentDrawNormal}" FontSize="11"
                                           Foreground="{DynamicResource ForegroundBrush}"
                                           TextWrapping="Wrap" Cursor="IBeam"
                                           ToolTip="Double-click to edit"
                                           Visibility="{Binding IsEditingCurrentDrawNormal, Converter={StaticResource InverseBoolToVis}}"
                                           MouseLeftButtonDown="CurrentDrawNormalDisplay_MouseLeftButtonDown"/>
                                <!-- Edit mode -->
                                <TextBox Grid.Column="1"
                                         x:Name="CurrentDrawNormalTextBox"
                                         Text="{Binding EditingCurrentDrawNormalText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Visibility="{Binding IsEditingCurrentDrawNormal, Converter={StaticResource BoolToVis}}"
                                         FontSize="11" Background="Transparent"
                                         BorderThickness="0,0,0,1"
                                         BorderBrush="{DynamicResource BorderBrush}"
                                         Foreground="{DynamicResource ForegroundBrush}"
                                         CaretBrush="{DynamicResource ForegroundBrush}"
                                         KeyDown="CurrentDrawNormalTextBox_KeyDown"
                                         LostFocus="CurrentDrawNormalTextBox_LostFocus"
                                         IsVisibleChanged="CurrentDrawNormalTextBox_IsVisibleChanged"/>
                            </Grid>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" MinWidth="80" MaxWidth="110"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Alarm" FontSize="11"
                                           Foreground="{DynamicResource IconForegroundBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <!-- Display: double-click to edit -->
                                <TextBlock Grid.Column="1"
                                           x:Name="CurrentDrawAlarmDisplay"
                                           Text="{Binding CurrentDrawAlarm}" FontSize="11"
                                           Foreground="{DynamicResource ForegroundBrush}"
                                           TextWrapping="Wrap" Cursor="IBeam"
                                           ToolTip="Double-click to edit"
                                           Visibility="{Binding IsEditingCurrentDrawAlarm, Converter={StaticResource InverseBoolToVis}}"
                                           MouseLeftButtonDown="CurrentDrawAlarmDisplay_MouseLeftButtonDown"/>
                                <!-- Edit mode -->
                                <TextBox Grid.Column="1"
                                         x:Name="CurrentDrawAlarmTextBox"
                                         Text="{Binding EditingCurrentDrawAlarmText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Visibility="{Binding IsEditingCurrentDrawAlarm, Converter={StaticResource BoolToVis}}"
                                         FontSize="11" Background="Transparent"
                                         BorderThickness="0,0,0,1"
                                         BorderBrush="{DynamicResource BorderBrush}"
                                         Foreground="{DynamicResource ForegroundBrush}"
                                         CaretBrush="{DynamicResource ForegroundBrush}"
                                         KeyDown="CurrentDrawAlarmTextBox_KeyDown"
                                         LostFocus="CurrentDrawAlarmTextBox_LostFocus"
                                         IsVisibleChanged="CurrentDrawAlarmTextBox_IsVisibleChanged"/>
                            </Grid>
                        </StackPanel>
                    </Expander>

                    <!-- ╔═════════════════════════╗ -->                    <!-- ║  WARNINGS CARD            ║ -->
                    <!-- ╚══════════════════════════╝ -->
                    <Expander Style="{StaticResource PulseExpanderStyle}"
                              IsExpanded="True"
                              Visibility="{Binding Warnings.Count, Converter={StaticResource CountToVisibility}}">
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AlertOutline" Width="13" Height="13"
                                                         VerticalAlignment="Center" Margin="0,0,5,0"
                                                         Foreground="#FFFFC107"/>
                                <TextBlock Text="WARNINGS" FontSize="10" FontWeight="SemiBold"
                                           Foreground="{DynamicResource IconForegroundBrush}"
                                           VerticalAlignment="Center"/>
                                <Border Background="#FFFFC107" CornerRadius="8" Padding="5,1" Margin="6,0,0,0">
                                    <TextBlock Text="{Binding Warnings.Count}" FontSize="9" FontWeight="Bold" Foreground="Black"/>
                                </Border>
                            </StackPanel>
                        </Expander.Header>
                        <ItemsControl ItemsSource="{Binding Warnings}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource HighlightBrush}"
                                            CornerRadius="3" Padding="8,6" Margin="0,0,0,4">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                                <Border Background="{Binding Severity, Converter={StaticResource SeverityToBrush}}"
                                                        CornerRadius="3" Padding="4,1" Margin="0,0,6,0">
                                                    <TextBlock Text="{Binding SeverityLabel}" FontSize="9"
                                                               FontWeight="Bold" Foreground="Black"/>
                                                </Border>
                                                <TextBlock Text="{Binding RuleName}" FontSize="10"
                                                           Foreground="{DynamicResource IconForegroundBrush}"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Message}" FontSize="11"
                                                       Foreground="{DynamicResource ForegroundBrush}"
                                                       TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>

                </StackPanel>
            </ScrollViewer>

            </Grid>

        </Grid>
    </Border>
</UserControl>
