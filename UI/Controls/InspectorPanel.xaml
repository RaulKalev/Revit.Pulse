<UserControl
    x:Class="Pulse.UI.Controls.InspectorPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:converters="clr-namespace:Pulse.UI.Converters"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibility"/>
        <converters:SeverityToBrushConverter x:Key="SeverityToBrush"/>
    </UserControl.Resources>

    <Border Style="{DynamicResource CardBorderStyle}">
        <Grid>
            <!-- No selection state -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                        Visibility="{Binding HasSelection, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}">
                <materialDesign:PackIcon Kind="InformationOutline" Width="32" Height="32"
                                         HorizontalAlignment="Center"
                                         Foreground="{DynamicResource IconForegroundBrush}" Opacity="0.4"/>
                <TextBlock Text="Select an item to inspect"
                           FontSize="11"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource IconForegroundBrush}"
                           Opacity="0.5"
                           Margin="0,6,0,0"/>
            </StackPanel>

            <!-- Selection details -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Visibility="{Binding HasSelection, Converter={StaticResource BoolToVis}}">
                <StackPanel Margin="4">
                    <!-- Entity header -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="InformationOutline" Width="18" Height="18"
                                                 VerticalAlignment="Center" Margin="0,0,6,0"
                                                 Foreground="{DynamicResource IconForegroundBrush}"/>
                        <TextBlock Text="Inspector" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Entity type and name -->
                    <TextBlock Text="{Binding EntityType}" FontSize="10"
                               Foreground="{DynamicResource IconForegroundBrush}"
                               Margin="0,0,0,2"/>
                    <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold"
                               Foreground="{DynamicResource ForegroundBrush}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,8"/>

                    <!-- Statistics row -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <!-- Warning count badge -->
                        <Border Style="{DynamicResource WarningBadgeStyle}"
                                Visibility="{Binding WarningCount, Converter={StaticResource CountToVisibility}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AlertOutline" Width="12" Height="12" VerticalAlignment="Center" Margin="0,0,3,0"/>
                                <TextBlock FontSize="10" FontWeight="Bold" Foreground="Black">
                                    <Run Text="{Binding WarningCount, Mode=OneWay}"/>
                                    <Run Text="warnings"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Device count -->
                        <Border Style="{DynamicResource InfoBadgeStyle}"
                                Visibility="{Binding ChildDeviceCount, Converter={StaticResource CountToVisibility}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccessPoint" Width="12" Height="12" VerticalAlignment="Center" Margin="0,0,3,0"/>
                                <TextBlock FontSize="10" FontWeight="Bold" Foreground="Black">
                                    <Run Text="{Binding ChildDeviceCount, Mode=OneWay}"/>
                                    <Run Text="devices"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Separator -->
                    <Border Height="1" Background="{DynamicResource BorderBrush}" Margin="0,4,0,8"/>

                    <!-- Properties list -->
                    <TextBlock Text="PROPERTIES" FontSize="10" FontWeight="SemiBold"
                               Foreground="{DynamicResource IconForegroundBrush}"
                               Margin="0,0,0,4"
                               Visibility="{Binding Properties.Count, Converter={StaticResource CountToVisibility}}"/>
                    <ItemsControl ItemsSource="{Binding Properties}" Margin="0,0,0,8">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" MinWidth="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Key}" FontSize="11"
                                               Foreground="{DynamicResource IconForegroundBrush}"
                                               Margin="0,0,8,0"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Value}" FontSize="11"
                                               Foreground="{DynamicResource ForegroundBrush}"
                                               TextWrapping="Wrap"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Warnings list -->
                    <TextBlock Text="WARNINGS" FontSize="10" FontWeight="SemiBold"
                               Foreground="{DynamicResource IconForegroundBrush}"
                               Margin="0,0,0,4"
                               Visibility="{Binding Warnings.Count, Converter={StaticResource CountToVisibility}}"/>
                    <ItemsControl ItemsSource="{Binding Warnings}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource HighlightBrush}"
                                        CornerRadius="3" Padding="6,4" Margin="0,2">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="{Binding Severity, Converter={StaticResource SeverityToBrush}}"
                                                    CornerRadius="3" Padding="4,1" Margin="0,0,6,0">
                                                <TextBlock Text="{Binding SeverityLabel}" FontSize="9"
                                                           FontWeight="Bold" Foreground="Black"/>
                                            </Border>
                                            <TextBlock Text="{Binding RuleName}" FontSize="10"
                                                       Foreground="{DynamicResource IconForegroundBrush}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Message}" FontSize="11"
                                                   Foreground="{DynamicResource ForegroundBrush}"
                                                   TextWrapping="Wrap" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
