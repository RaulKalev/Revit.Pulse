<!--
    PSU / transformer section symbol.
    Uses a Viewbox so it scales to whatever Width × Height the parent sets.
    Design canvas: 48 × 80 px.
    Diagonal runs top-left → bottom-right; rod is upper-right vertical bar;
    coil is three right-facing bumps (cubic-bezier) in the lower-left.
-->
<UserControl
    x:Class="Pulse.UI.Controls.PSUSymbol"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    IsHitTestVisible="False">
    <Viewbox Stretch="Fill">
        <Canvas Width="48" Height="80">

            <!--  Diagonal: exactly top-left → bottom-right of design canvas  -->
            <Line
                Stroke="{Binding DimBrush, FallbackValue=#66FFFFFF, TargetNullValue=#66FFFFFF}"
                StrokeThickness="1"
                X1="0" Y1="0"
                X2="48" Y2="80" />

            <!--  Rod (fuse): plain vertical bar, upper-right  -->
            <Line
                Stroke="{Binding StrokeBrush, FallbackValue=#CCFFFFFF, TargetNullValue=#CCFFFFFF}"
                StrokeThickness="1.5"
                X1="36" Y1="10"
                X2="36" Y2="30" />

            <!--  AC symbol: mirrored-S — top bump bows left, bottom bump bows right.
                  Short vertical tails top and bottom. Centred at x=12. -->
            <Path
                Fill="Transparent"
                Stroke="{Binding DimBrush, FallbackValue=#66FFFFFF, TargetNullValue=#66FFFFFF}"
                StrokeThickness="1.5"
                Data="M 12,41 C 2,43 2,53 12,55 C 22,57 22,67 12,69 L 12,70" />

        </Canvas>
    </Viewbox>
</UserControl>
