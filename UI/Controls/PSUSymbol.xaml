<!--
    PSU / transformer section symbol.
    Uses a Viewbox so it scales to whatever Width × Height the parent sets.
    Design canvas: 48 × 80 px.
    Diagonal runs top-left → bottom-right; rod is upper-right vertical bar;
    coil is three right-facing bumps (cubic-bezier) in the lower-left.
-->
<UserControl
    x:Class="Pulse.UI.Controls.PSUSymbol"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    IsHitTestVisible="False">
    <Viewbox Stretch="Fill">
        <Canvas Width="48" Height="80">

            <!--  Diagonal: exactly top-left → bottom-right of design canvas  -->
            <Line
                Stroke="{Binding DimBrush, FallbackValue=#66FFFFFF, TargetNullValue=#66FFFFFF}"
                StrokeThickness="1"
                X1="0" Y1="0"
                X2="48" Y2="80" />

            <!--  Rod (fuse): plain vertical bar, upper-right  -->
            <Line
                Stroke="{Binding StrokeBrush, FallbackValue=#CCFFFFFF, TargetNullValue=#CCFFFFFF}"
                StrokeThickness="1.5"
                X1="36" Y1="10"
                X2="36" Y2="30" />

            <!--  Coil: 3 right-facing bumps using cubic beziers, lower-left.
                  Bezier curves transform correctly under non-uniform scaling.
                  Each bump: start/end at x=10, control points at x=22. -->
            <Path
                Fill="Transparent"
                Stroke="{Binding DimBrush, FallbackValue=#66FFFFFF, TargetNullValue=#66FFFFFF}"
                StrokeThickness="1.5"
                Data="M 10,46 C 22,46 22,54 10,54 C 22,54 22,62 10,62 C 22,62 22,70 10,70 L 10,74" />

        </Canvas>
    </Viewbox>
</UserControl>
