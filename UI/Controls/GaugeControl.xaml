<UserControl
    x:Class="Pulse.UI.Controls.GaugeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d">

    <!--
        Speedometer-style semicircular gauge.
        All geometry is computed in code-behind from Value / Maximum DPs.
        Uses a Viewbox so the control scales to any size.
        Layout: label at top, thin arc ring, combined "V / M unit" text centered inside arc, percentage below.
    -->
    <Viewbox Stretch="Uniform">
        <Canvas Width="140" Height="112">

            <!-- Gauge label — sits above the arc with breathing room -->
            <TextBlock x:Name="LabelText"
                       Canvas.Left="0" Canvas.Top="2"
                       Width="140" TextAlignment="Center"
                       FontSize="9" Opacity="0.45"
                       Foreground="White"
                       TextOptions.TextFormattingMode="Display"/>

            <!-- Background track arc (full 180°) — geometry set in code-behind -->
            <Path x:Name="BackTrackPath"
                  StrokeThickness="12"
                  Stroke="#55FFFFFF"
                  StrokeStartLineCap="Flat"
                  StrokeEndLineCap="Flat"
                  Fill="Transparent"/>

            <!-- Value arc — stroked, no fill, geometry + color set in code-behind -->
            <Path x:Name="ValueArcPath"
                  StrokeThickness="12"
                  StrokeStartLineCap="Flat"
                  StrokeEndLineCap="Flat"
                  Fill="Transparent"/>

            <!-- Combined "value / max unit" — below the arc -->
            <TextBlock x:Name="ValueText"
                       Canvas.Left="0" Canvas.Top="88"
                       Width="140" TextAlignment="Center"
                       FontSize="13" FontWeight="Bold"
                       Foreground="White"/>

            <!-- Percentage -->
            <TextBlock x:Name="PercentText"
                       Canvas.Left="0" Canvas.Top="103"
                       Width="140" TextAlignment="Center"
                       FontSize="9" Opacity="0.50"
                       Foreground="White"/>

        </Canvas>
    </Viewbox>
</UserControl>
