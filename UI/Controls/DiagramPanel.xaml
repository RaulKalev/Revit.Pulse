<UserControl
    x:Class="Pulse.UI.Controls.DiagramPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Pulse;component/UI/Themes/DarkTheme.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Pulse;component/UI/Themes/ElementStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource CardBorderStyle}" CornerRadius="5,0,0,5" Padding="0" ClipToBounds="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>   <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
            </Grid.RowDefinitions>

            <!-- ── Header ── -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    CornerRadius="5,0,0,0">
                <DockPanel Margin="8,0,4,0" VerticalAlignment="Center">

                    <!-- Toggle button — right-docked so title stays left-aligned -->
                    <Button x:Name="ToggleButton"
                            DockPanel.Dock="Right"
                            Style="{StaticResource PulseActionButtonStyle}"
                            Width="24" Height="24"
                            Padding="0"
                            Margin="0,0,4,0"
                            ToolTip="Toggle diagram panel"
                            Click="ToggleButton_Click">
                        <materialDesign:PackIcon x:Name="ToggleIcon"
                                                 Kind="ChevronRight"
                                                 Width="14" Height="14"
                                                 Foreground="{DynamicResource ForegroundBrush}"/>
                    </Button>

                    <!-- Restore hidden/deleted items button — only visible when there are non-visible items -->
                    <Button x:Name="RestoreButton"
                            DockPanel.Dock="Right"
                            Style="{StaticResource PulseActionButtonStyle}"
                            Height="24"
                            Visibility="Collapsed"
                            Padding="6,0"
                            ToolTip="Show hidden / deleted items"
                            Click="RestoreButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="EyeOff"
                                                     Width="13" Height="13"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,4,0"/>
                            <TextBlock Text="Layers"
                                       FontSize="10"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Canvas settings button — always visible when expanded -->
                    <Button x:Name="CanvasSettingsButton"
                            DockPanel.Dock="Right"
                            Style="{StaticResource PulseActionButtonStyle}"
                            Height="24"
                            Padding="6,0"
                            ToolTip="Canvas drawing settings"
                            Click="CanvasSettingsButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TuneVariant"
                                                     Width="13" Height="13"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,4,0"/>
                            <TextBlock Text="Settings"
                                       FontSize="10"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Paper size selector — to the left of Settings -->
                    <ComboBox x:Name="PaperSizeCombo"
                              DockPanel.Dock="Right"
                              Width="100"
                              Margin="0,0,4,0"
                              Style="{DynamicResource DarkComboBoxStyle}"
                              SelectedValuePath="Id"
                              ToolTip="Select paper size"
                              SelectionChanged="PaperSizeCombo_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>



                    <!-- Diagram icon + title — hidden when collapsed -->
                    <StackPanel x:Name="HeaderTitleStack"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="VectorPolyline"
                                                 Width="14" Height="14"
                                                 Foreground="{DynamicResource IconForegroundBrush}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,6,0"/>
                        <TextBlock Text="Diagram"
                                   FontSize="11" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                </DockPanel>
            </Border>

            <!-- ── Rotated tab label shown only when collapsed ── -->
            <Grid Grid.Row="0" Grid.RowSpan="2"
                  x:Name="CollapsedLabel"
                  Visibility="Collapsed">
                <TextBlock Text="DIAGRAM"
                           FontSize="10" FontWeight="SemiBold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           Opacity="0.55"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="90"/>
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Grid>

            <!-- ── Content area — level diagram drawn in code-behind ── -->
            <Grid x:Name="DiagramContent"
                  Grid.Row="1"
                  ClipToBounds="True"
                  Focusable="True"
                  Background="{DynamicResource PrimaryBackgroundBrush}"
                  SizeChanged="DiagramContent_SizeChanged"
                  PreviewMouseWheel="DiagramContent_PreviewMouseWheel"
                  PreviewKeyDown="DiagramContent_PreviewKeyDown"
                  MouseMove="DiagramContent_MouseMove"
                  MouseUp="DiagramContent_MouseUp"
                  MouseLeftButtonUp="DiagramContent_MouseLeftButtonUp"
                  MouseDown="DiagramContent_MouseDown">

                <!-- Horizontal-only scroll to reveal overflowing loops -->
                <ScrollViewer x:Name="DiagramScrollViewer"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              CanContentScroll="False"
                              Background="Transparent"
                              Padding="0"
                              BorderThickness="0">
                    <ScrollViewer.Resources>
                        <!-- Kill the white square where the two scrollbars meet -->
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#FF1F1F1F"/>
                    </ScrollViewer.Resources>
                    <Canvas x:Name="DiagramCanvas"
                            ClipToBounds="False"
                            MouseLeftButtonUp="DiagramCanvas_MouseLeftButtonUp"/>
                </ScrollViewer>

                <!-- Loop context popup — appears when clicking a loop wire -->
                <Popup x:Name="LoopPopup"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Fade"
                       Placement="MousePoint">
                    <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            MinWidth="150">
                        <StackPanel>
                            <TextBlock x:Name="LoopPopupTitle"
                                       FontSize="9" FontWeight="SemiBold"
                                       Opacity="0.55"
                                       Padding="10,7,10,4"
                                       Foreground="{DynamicResource ForegroundBrush}"/>
                            <Separator Margin="0,2,0,2"
                                       Background="{DynamicResource BorderBrush}"/>
                            <Button x:Name="LoopPopupFlipButton"
                                    Click="LoopPopupFlip_Click"
                                    Style="{StaticResource PulseActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="10,5,10,4"
                                    FontSize="11"/>
                            <Button x:Name="LoopPopupAddLineButton"
                                    Click="LoopPopupAddLine_Click"
                                    Style="{StaticResource PulseActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="10,4,10,4"
                                    FontSize="11"/>
                            <Button x:Name="LoopPopupRemoveLineButton"
                                    Click="LoopPopupRemoveLine_Click"
                                    Style="{StaticResource PulseActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="10,4,10,4"
                                    FontSize="11"/>
                            <Button x:Name="LoopPopupMoveUpButton"
                                    Click="LoopPopupMoveUp_Click"
                                    Style="{StaticResource PulseActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="10,4,10,4"
                                    FontSize="11">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ArrowUp" Width="13" Height="13" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="Move up" FontSize="11" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="LoopPopupMoveDownButton"
                                    Click="LoopPopupMoveDown_Click"
                                    Style="{StaticResource PulseActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="10,4,10,4"
                                    FontSize="11">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ArrowDown" Width="13" Height="13" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="Move down" FontSize="11" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <!-- Wire selector -->
                            <Separator Margin="0,4,0,2"
                                       Background="{DynamicResource BorderBrush}"/>
                            <Grid Margin="8,4,8,7">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Wire:"
                                           FontSize="11" VerticalAlignment="Center"
                                           Foreground="{DynamicResource ForegroundBrush}"
                                           Margin="2,0,8,0"/>
                                <ComboBox x:Name="LoopPopupWireCombo"
                                          Grid.Column="1"
                                          FontSize="11"
                                          Style="{DynamicResource DarkComboBoxStyle}"
                                          MinWidth="110"
                                          SelectionChanged="LoopPopupWireCombo_SelectionChanged"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Popup>

                <!-- Panel edit popup — appears at panel click position -->
                <Popup x:Name="PanelPopup"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Fade"
                       Placement="MousePoint">
                    <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            MinWidth="220">
                        <StackPanel>
                            <!-- Title -->
                            <TextBlock x:Name="PanelPopupTitle"
                                       FontSize="9" FontWeight="SemiBold"
                                       Opacity="0.55"
                                       Padding="10,7,10,4"
                                       Foreground="{DynamicResource ForegroundBrush}"/>
                            <Separator Margin="0,2,0,2" Background="{DynamicResource BorderBrush}"/>

                            <!-- Name field -->
                            <TextBlock Text="Name"
                                       FontSize="10" Opacity="0.55"
                                       Margin="10,6,10,2"
                                       Foreground="{DynamicResource ForegroundBrush}"/>
                            <TextBox x:Name="PanelPopupName"
                                     FontSize="11"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinLines="2" MaxLines="3"
                                     Margin="8,0,8,8"
                                     Padding="6,4,6,4"
                                     Foreground="{DynamicResource ForegroundBrush}"
                                     Background="{DynamicResource BackgroundBrush}"
                                     BorderBrush="{DynamicResource BorderBrush}"
                                     CaretBrush="{DynamicResource ForegroundBrush}"/>

                            <!-- Output count row -->
                            <TextBlock Text="Output count"
                                       FontSize="10" Opacity="0.55"
                                       Margin="10,0,10,2"
                                       Foreground="{DynamicResource ForegroundBrush}"/>
                            <Grid Margin="8,0,8,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="28"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="28"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0"
                                        x:Name="PanelPopupOutDown"
                                        Content="−"
                                        FontSize="14"
                                        Style="{StaticResource PulseActionButtonStyle}"
                                        Padding="0"
                                        Click="PanelPopupOutDown_Click"/>
                                <TextBox Grid.Column="1"
                                         x:Name="PanelPopupOutCount"
                                         FontSize="11"
                                         TextAlignment="Center"
                                         Margin="4,0,4,0"
                                         Padding="4,4,4,4"
                                         Foreground="{DynamicResource ForegroundBrush}"
                                         Background="{DynamicResource BackgroundBrush}"
                                         BorderBrush="{DynamicResource BorderBrush}"
                                         CaretBrush="{DynamicResource ForegroundBrush}"/>
                                <Button Grid.Column="2"
                                        x:Name="PanelPopupOutUp"
                                        Content="+"
                                        FontSize="13"
                                        Style="{StaticResource PulseActionButtonStyle}"
                                        Padding="0"
                                        Click="PanelPopupOutUp_Click"/>
                            </Grid>

                            <!-- Supply field -->
                            <TextBlock Text="Supply"
                                       FontSize="10" Opacity="0.55"
                                       Margin="10,0,10,2"
                                       Foreground="{DynamicResource ForegroundBrush}"/>
                            <TextBox x:Name="PanelPopupSupply"
                                     FontSize="11"
                                     Margin="8,0,8,8"
                                     Padding="6,4,6,4"
                                     Foreground="{DynamicResource ForegroundBrush}"
                                     Background="{DynamicResource BackgroundBrush}"
                                     BorderBrush="{DynamicResource BorderBrush}"
                                     CaretBrush="{DynamicResource ForegroundBrush}"/>

                            <!-- Output labels — populated dynamically from code-behind -->
                            <Separator Margin="0,2,0,2" Background="{DynamicResource BorderBrush}"/>
                            <TextBlock Text="Output labels"
                                       FontSize="10" Opacity="0.55"
                                       Margin="10,6,10,4"
                                       Foreground="{DynamicResource ForegroundBrush}"/>
                            <StackPanel x:Name="PanelPopupOutputsPanel"
                                        Margin="8,0,8,6"/>

                            <Separator Margin="0,2,0,2" Background="{DynamicResource BorderBrush}"/>

                            <!-- Save button -->
                            <Button x:Name="PanelPopupSave"
                                    Click="PanelPopupSave_Click"
                                    Style="{StaticResource PulseActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="10,5,10,6"
                                    FontSize="11">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ContentSave" Width="13" Height="13" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="Save" FontSize="11" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                </Popup>

                <!-- Level context popup — appears at mouse position on click -->
                <Popup x:Name="LevelPopup"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Fade"
                       Placement="MousePoint">
                    <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            MinWidth="130">
                        <StackPanel>
                            <TextBlock x:Name="PopupLevelName"
                                       FontSize="9" FontWeight="SemiBold"
                                       Opacity="0.55"
                                       Padding="10,7,10,4"
                                       Foreground="{DynamicResource ForegroundBrush}"/>
                            <Separator Margin="0,2,0,2"
                                       Background="{DynamicResource BorderBrush}"/>
                            <Button x:Name="PopupVisibilityButton"
                                    Click="PopupVisibility_Click"
                                    Style="{StaticResource PulseActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="10,5,10,5"
                                    FontSize="11"/>
                            <Button x:Name="PopupMoveButton"
                                    Click="PopupMove_Click"
                                    Style="{StaticResource PulseActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="10,5,10,5"
                                    FontSize="11"
                                    Visibility="Collapsed"/>
                            <Button x:Name="PopupDeleteButton"
                                    Click="PopupDelete_Click"
                                    Style="{StaticResource PulseActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="10,5,10,7"
                                    FontSize="11"/>
                        </StackPanel>
                    </Border>
                </Popup>

                <!-- Restore popup — lists all hidden/deleted elements -->
                <Popup x:Name="RestorePopup"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Fade"
                       PlacementTarget="{Binding ElementName=RestoreButton}"
                       Placement="Bottom">
                    <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            MinWidth="200">
                        <StackPanel>
                            <TextBlock Text="Hidden / Deleted"
                                       FontSize="9" FontWeight="SemiBold"
                                       Opacity="0.45"
                                       Padding="10,7,10,4"
                                       Foreground="{DynamicResource ForegroundBrush}"/>
                            <Separator Margin="0,2,0,4"
                                       Background="{DynamicResource BorderBrush}"/>
                            <ScrollViewer MaxHeight="260"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <StackPanel x:Name="RestoreList" Margin="0,0,0,4"/>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </Popup>

                <!-- Canvas settings popup -->
                <Popup x:Name="CanvasSettingsPopup"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Fade"
                       PlacementTarget="{Binding ElementName=CanvasSettingsButton}"
                       Placement="Bottom">
                    <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            MinWidth="210"
                            Padding="10,8,10,10">
                        <StackPanel>
                            <TextBlock Text="Canvas Settings"
                                       FontSize="9" FontWeight="SemiBold"
                                       Opacity="0.45"
                                       Margin="0,0,0,6"
                                       Foreground="{DynamicResource ForegroundBrush}"/>
                            <Separator Margin="0,0,0,8"
                                       Background="{DynamicResource BorderBrush}"/>

                            <!-- Wire row spacing -->
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="56"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Wire row spacing (px):"
                                           FontSize="11" VerticalAlignment="Center"
                                           Foreground="{DynamicResource ForegroundBrush}"
                                           Grid.Column="0" Margin="0,0,8,0"/>
                                <TextBox x:Name="TbWireSpacing"
                                         Grid.Column="1"
                                         FontSize="11"
                                         Style="{DynamicResource DarkTextBoxStyle}"
                                         VerticalContentAlignment="Center"
                                         Height="24"/>
                            </Grid>

                            <!-- Device spacing -->
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="56"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Device spacing (px, 0=auto):"
                                           FontSize="11" VerticalAlignment="Center"
                                           Foreground="{DynamicResource ForegroundBrush}"
                                           Grid.Column="0" Margin="0,0,8,0"
                                           TextWrapping="Wrap"/>
                                <TextBox x:Name="TbDeviceSpacing"
                                         Grid.Column="1"
                                         FontSize="11"
                                         Style="{DynamicResource DarkTextBoxStyle}"
                                         VerticalContentAlignment="Center"
                                         Height="24"/>
                            </Grid>

                            <!-- Repetitions -->
                            <CheckBox x:Name="CbShowRepetitions"
                                      Margin="0,0,0,6"
                                      Foreground="{DynamicResource ForegroundBrush}"
                                      FontSize="11">
                                <TextBlock Text="Collapse repeated devices (·4 in a row)"
                                           FontSize="11" TextWrapping="Wrap"/>
                            </CheckBox>

                            <!-- Address labels -->
                            <CheckBox x:Name="CbShowAddressLabels"
                                      Margin="0,0,0,6"
                                      Foreground="{DynamicResource ForegroundBrush}"
                                      FontSize="11">
                                <TextBlock Text="Show address labels"
                                           FontSize="11" TextWrapping="Wrap"/>
                            </CheckBox>

                            <!-- Label offset -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="56"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Label offset (px):"
                                           FontSize="11" VerticalAlignment="Center"
                                           Foreground="{DynamicResource ForegroundBrush}"
                                           Grid.Column="0" Margin="0,0,8,0"/>
                                <TextBox x:Name="TbLabelOffset"
                                         Grid.Column="1"
                                         FontSize="11"
                                         Style="{DynamicResource DarkTextBoxStyle}"
                                         VerticalContentAlignment="Center"
                                         Height="24"/>
                            </Grid>

                            <Button x:Name="BtnCanvasSettingsApply"
                                    Click="BtnCanvasSettingsApply_Click"
                                    Style="{StaticResource PulseActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Height="26"
                                    FontSize="11">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Check" Width="13" Height="13"
                                                             VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="Apply" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                </Popup>

            </Grid>

        </Grid>
    </Border>
</UserControl>
