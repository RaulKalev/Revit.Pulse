<UserControl
    x:Class="Pulse.UI.Controls.DiagramPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Pulse;component/UI/Themes/DarkTheme.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Pulse;component/UI/Themes/ElementStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource CardBorderStyle}" Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>   <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
            </Grid.RowDefinitions>

            <!-- ── Header ── -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    CornerRadius="6,6,0,0">
                <DockPanel Margin="8,0,4,0" VerticalAlignment="Center">

                    <!-- Toggle button — right-docked so title stays left-aligned -->
                    <Button x:Name="ToggleButton"
                            DockPanel.Dock="Right"
                            Style="{StaticResource PulseActionButtonStyle}"
                            Width="24" Height="24"
                            ToolTip="Toggle diagram panel"
                            Click="ToggleButton_Click">
                        <materialDesign:PackIcon x:Name="ToggleIcon"
                                                 Kind="ChevronRight"
                                                 Width="14" Height="14"/>
                    </Button>

                    <!-- Restore hidden/deleted items button — only visible when there are non-visible items -->
                    <Button x:Name="RestoreButton"
                            DockPanel.Dock="Right"
                            Style="{StaticResource PulseActionButtonStyle}"
                            Height="24"
                            Visibility="Collapsed"
                            Padding="6,0"
                            ToolTip="Show hidden / deleted items"
                            Click="RestoreButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="EyeOff"
                                                     Width="13" Height="13"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,4,0"/>
                            <TextBlock Text="Layers"
                                       FontSize="10"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Canvas settings button — always visible when expanded -->
                    <Button x:Name="CanvasSettingsButton"
                            DockPanel.Dock="Right"
                            Style="{StaticResource PulseActionButtonStyle}"
                            Height="24"
                            Padding="6,0"
                            ToolTip="Canvas drawing settings"
                            Click="CanvasSettingsButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TuneVariant"
                                                     Width="13" Height="13"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,4,0"/>
                            <TextBlock Text="Settings"
                                       FontSize="10"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>



                    <!-- Diagram icon + title — hidden when collapsed -->
                    <StackPanel x:Name="HeaderTitleStack"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="VectorPolyline"
                                                 Width="14" Height="14"
                                                 Foreground="{DynamicResource IconForegroundBrush}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,6,0"/>
                        <TextBlock Text="Diagram"
                                   FontSize="11" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                </DockPanel>
            </Border>

            <!-- ── Rotated tab label shown only when collapsed ── -->
            <Grid Grid.Row="0" Grid.RowSpan="2"
                  x:Name="CollapsedLabel"
                  Visibility="Collapsed">
                <TextBlock Text="DIAGRAM"
                           FontSize="10" FontWeight="SemiBold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           Opacity="0.55"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="90"/>
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Grid>

            <!-- ── Content area — level diagram drawn in code-behind ── -->
            <Grid x:Name="DiagramContent"
                  Grid.Row="1"
                  ClipToBounds="True"
                  Focusable="True"
                  Background="{DynamicResource PrimaryBackgroundBrush}"
                  SizeChanged="DiagramContent_SizeChanged"
                  PreviewMouseWheel="DiagramContent_PreviewMouseWheel"
                  PreviewKeyDown="DiagramContent_PreviewKeyDown"
                  MouseMove="DiagramContent_MouseMove"
                  MouseUp="DiagramContent_MouseUp"
                  MouseLeftButtonUp="DiagramContent_MouseLeftButtonUp"
                  MouseDown="DiagramContent_MouseDown">

                <!-- Horizontal-only scroll to reveal overflowing loops -->
                <ScrollViewer x:Name="DiagramScrollViewer"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled"
                              CanContentScroll="False"
                              Background="Transparent"
                              Padding="0"
                              BorderThickness="0">
                    <Canvas x:Name="DiagramCanvas"
                            ClipToBounds="False"
                            MouseLeftButtonUp="DiagramCanvas_MouseLeftButtonUp"/>
                </ScrollViewer>

                <!-- Loop context popup — appears when clicking a loop wire -->
                <Popup x:Name="LoopPopup"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Fade"
                       Placement="MousePoint">
                    <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            MinWidth="150">
                        <StackPanel>
                            <TextBlock x:Name="LoopPopupTitle"
                                       FontSize="9" FontWeight="SemiBold"
                                       Opacity="0.55"
                                       Padding="10,7,10,4"
                                       Foreground="{DynamicResource ForegroundBrush}"/>
                            <Separator Margin="0,2,0,2"
                                       Background="{DynamicResource BorderBrush}"/>
                            <Button x:Name="LoopPopupFlipButton"
                                    Click="LoopPopupFlip_Click"
                                    Style="{StaticResource PulseActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="10,5,10,4"
                                    FontSize="11"/>
                            <Button x:Name="LoopPopupAddLineButton"
                                    Click="LoopPopupAddLine_Click"
                                    Style="{StaticResource PulseActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="10,4,10,4"
                                    FontSize="11"/>
                            <Button x:Name="LoopPopupRemoveLineButton"
                                    Click="LoopPopupRemoveLine_Click"
                                    Style="{StaticResource PulseActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="10,4,10,4"
                                    FontSize="11"/>
                            <!-- Wire selector -->
                            <Separator Margin="0,4,0,2"
                                       Background="{DynamicResource BorderBrush}"/>
                            <Grid Margin="8,4,8,7">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Wire:"
                                           FontSize="11" VerticalAlignment="Center"
                                           Foreground="{DynamicResource ForegroundBrush}"
                                           Margin="2,0,8,0"/>
                                <ComboBox x:Name="LoopPopupWireCombo"
                                          Grid.Column="1"
                                          FontSize="11"
                                          Style="{DynamicResource DarkComboBoxStyle}"
                                          MinWidth="110"
                                          SelectionChanged="LoopPopupWireCombo_SelectionChanged"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Popup>

                <!-- Level context popup — appears at mouse position on click -->
                <Popup x:Name="LevelPopup"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Fade"
                       Placement="MousePoint">
                    <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            MinWidth="130">
                        <StackPanel>
                            <TextBlock x:Name="PopupLevelName"
                                       FontSize="9" FontWeight="SemiBold"
                                       Opacity="0.55"
                                       Padding="10,7,10,4"
                                       Foreground="{DynamicResource ForegroundBrush}"/>
                            <Separator Margin="0,2,0,2"
                                       Background="{DynamicResource BorderBrush}"/>
                            <Button x:Name="PopupVisibilityButton"
                                    Click="PopupVisibility_Click"
                                    Style="{StaticResource PulseActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="10,5,10,5"
                                    FontSize="11"/>
                            <Button x:Name="PopupMoveButton"
                                    Click="PopupMove_Click"
                                    Style="{StaticResource PulseActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="10,5,10,5"
                                    FontSize="11"
                                    Visibility="Collapsed"/>
                            <Button x:Name="PopupDeleteButton"
                                    Click="PopupDelete_Click"
                                    Style="{StaticResource PulseActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="10,5,10,7"
                                    FontSize="11"/>
                        </StackPanel>
                    </Border>
                </Popup>

                <!-- Restore popup — lists all hidden/deleted elements -->
                <Popup x:Name="RestorePopup"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Fade"
                       PlacementTarget="{Binding ElementName=RestoreButton}"
                       Placement="Bottom">
                    <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            MinWidth="200">
                        <StackPanel>
                            <TextBlock Text="Hidden / Deleted"
                                       FontSize="9" FontWeight="SemiBold"
                                       Opacity="0.45"
                                       Padding="10,7,10,4"
                                       Foreground="{DynamicResource ForegroundBrush}"/>
                            <Separator Margin="0,2,0,4"
                                       Background="{DynamicResource BorderBrush}"/>
                            <ScrollViewer MaxHeight="260"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <StackPanel x:Name="RestoreList" Margin="0,0,0,4"/>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </Popup>

                <!-- Canvas settings popup -->
                <Popup x:Name="CanvasSettingsPopup"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Fade"
                       PlacementTarget="{Binding ElementName=CanvasSettingsButton}"
                       Placement="Bottom">
                    <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            MinWidth="210"
                            Padding="10,8,10,10">
                        <StackPanel>
                            <TextBlock Text="Canvas Settings"
                                       FontSize="9" FontWeight="SemiBold"
                                       Opacity="0.45"
                                       Margin="0,0,0,6"
                                       Foreground="{DynamicResource ForegroundBrush}"/>
                            <Separator Margin="0,0,0,8"
                                       Background="{DynamicResource BorderBrush}"/>

                            <!-- Wire row spacing -->
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="56"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Wire row spacing (px):"
                                           FontSize="11" VerticalAlignment="Center"
                                           Foreground="{DynamicResource ForegroundBrush}"
                                           Grid.Column="0" Margin="0,0,8,0"/>
                                <TextBox x:Name="TbWireSpacing"
                                         Grid.Column="1"
                                         FontSize="11"
                                         Style="{DynamicResource DarkTextBoxStyle}"
                                         VerticalContentAlignment="Center"
                                         Height="24"/>
                            </Grid>

                            <!-- Device spacing -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="56"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Device spacing (px, 0=auto):"
                                           FontSize="11" VerticalAlignment="Center"
                                           Foreground="{DynamicResource ForegroundBrush}"
                                           Grid.Column="0" Margin="0,0,8,0"
                                           TextWrapping="Wrap"/>
                                <TextBox x:Name="TbDeviceSpacing"
                                         Grid.Column="1"
                                         FontSize="11"
                                         Style="{DynamicResource DarkTextBoxStyle}"
                                         VerticalContentAlignment="Center"
                                         Height="24"/>
                            </Grid>

                            <Button x:Name="BtnCanvasSettingsApply"
                                    Click="BtnCanvasSettingsApply_Click"
                                    Style="{StaticResource PulseActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Height="26"
                                    FontSize="11">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Check" Width="13" Height="13"
                                                             VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="Apply" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                </Popup>

            </Grid>

        </Grid>
    </Border>
</UserControl>
